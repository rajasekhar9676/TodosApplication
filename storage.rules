rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write files in task-attachments folder
    match /task-attachments/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write their own profile images
    match /profile-images/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write team images
    match /team-images/{teamId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write files in organize section
    match /org/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


















